import random
import string 


an = ['The Wig Party', 'Madonna', 'Uncle John']
av = ['ran', 'slogged', 'boogied']
ad = ['red', 'fat', 'hairless', 'cocky', 'ugly']
dan = []
loa = []
vea = []
name = []
fasa = []


sentence = "noun verb into noun at mirror at the adjective house of noun in a adjective manner."
words = sentence.split()
#print(words)
for c, word in enumerate(words):
  #print(c, word)
  if word == "noun":
    x = c
    dan.append(x)
   # print(dan)
  if word == "adjective":
    y = c
    loa.append(y)
    #(loa)
  if word == "verb":
    v = c
    vea.append(v)
   # print(vea)

def rangen():
    for i, x in enumerate(dan):
     # print(i, x)
      words[x] = random.shuffle(an)
      words[x] = random.choice(an)
     # print(words[x])
      sentence = " ".join(words)
      #print(sentence)
    for ab, y in enumerate(loa):
     # print(ab, y)
      words[y] = random.shuffle(ad)
      words[y] = random.choice(ad)
     # print(words[y])
      sentence = " ".join(words)
      #print(sentence)
    for lc, v in enumerate(vea):
     # print(lc, v)
      words[v] = random.shuffle(av)
      words[v] = random.choice(av)
      #print(words[v])
      sentence = " ".join(words)
      print(sentence)

def userdef():
    for i, x in enumerate(dan):
        glow = raw_input("What noun?")
        name.append(glow)
        #print(name)
        for e, glow in enumerate(name):
            words[x] = name[e]
            sentence = " ".join(words)
            #print(sentence)
    for ab, y in enumerate(loa):
        fina = raw_input("What adjective?")
        fasa.append(fina)
       # print(fasa)
        for yo, fina in enumerate(fasa):
            words[y] = fasa[yo]
            sentence = " ".join(words)
            #print(sentence)
    for lc, v in enumerate(vea):
        mata = raw_input("What verb?")
        name.append(mata)
       # print(name)
        for moo, mata in enumerate(name):
            words[v] = name[moo]
            sentence = " ".join(words)
        print(sentence)
      


bur = raw_input("If you would you like random generation, enter 'random' or enter the words yourself by pressing any key to continue:")
if bur == "random":
    x = rangen()
    print(x)
else:
    cols = raw_input("Would you like some suggestions? When you enter 'yes' you will get unique suggestions each time:")
    if cols == "yes":
        print(random.choice(an))
        print(random.choice(av))
        print(random.choice(ad))
    do = userdef()
    print(do)
